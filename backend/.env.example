# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3001
APP_NAME=Vai Coxinha API
APP_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/vai_coxinha_dev

# JWT Authentication
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-here-minimum-32-characters
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=vai-coxinha-dev
AWS_S3_ENDPOINT=

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Payment Gateways
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=

STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@vai-coxinha.com
FROM_NAME=Vai Coxinha

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring and Logging
SENTRY_DSN=
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security
SESSION_SECRET=your-super-secret-session-key-here-minimum-32-characters
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_CORS_ENABLED=true

# Development
DEBUG=vai-coxinha:*
NODE_OPTIONS=--max-old-space-size=4096