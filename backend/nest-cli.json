{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend-nestjs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/backend-nestjs/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend-nestjs",
  "projects": {
    "backend-nestjs": {
      "type": "application",
      "root": "apps/backend-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/backend-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend-nestjs/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "products-service": {
      "type": "application",
      "root": "apps/products-service",
      "entryFile": "main",
      "sourceRoot": "apps/products-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products-service/tsconfig.app.json"
      }
    },
    "orders-service": {
      "type": "application",
      "root": "apps/orders-service",
      "entryFile": "main",
      "sourceRoot": "apps/orders-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders-service/tsconfig.app.json"
      }
    },
    "payments-service": {
      "type": "application",
      "root": "apps/payments-service",
      "entryFile": "main",
      "sourceRoot": "apps/payments-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments-service/tsconfig.app.json"
      }
    },
    "admin-service": {
      "type": "application",
      "root": "apps/admin-service",
      "entryFile": "main",
      "sourceRoot": "apps/admin-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-service/tsconfig.app.json"
      }
    }
  }
}